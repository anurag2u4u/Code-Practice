//string is sequence of characters"anurag"
#include<iostream>
using namespace std;
int main(){
    string str="geeks of geeks";
    cout<<str;
    return 0;
}
//we do not have to worry about size
//we can assign a string later
int main(){
    string str="anurag";
    cout<<str<<endl;
    cout<<str.length()<<endl;
    str=str+"hc ero";
    cout<<str<<endl;
    cout<<str.substr(1,6)<<endl;
    cout<<str.find("r")<<endl;
    return 0;
}
#include<iostream>
using namespace std;
int main(){
    string str;
    cin>>str;
    int pl=str.find("ee");
    if(pl==string::npos){    //this is condition for the string not present
        cout<<"not present";
    }    
    else{
        cout<<"first occurence is"<<pl;
    }
    return 0;
}
